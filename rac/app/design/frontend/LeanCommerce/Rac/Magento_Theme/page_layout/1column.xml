<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="page.wrapper">
        <container name="header.container" as="header_container" label="Page Header Container" htmlTag="header" htmlClass="container" htmlId="header" before="main.content"/>
        <container name="page.top" as="page_top" label="After Page Header" after="header.container" htmlTag="div" htmlClass="container main-rac-1"/>
        <container name="footer.container.rac" as="footer_container" label="Footer Area 1" htmlTag="div" htmlClass="footer-container container">
            <container name="footer-container" as="footer" after="-" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer"/>
        </container>
        
    </referenceContainer>
</layout>
